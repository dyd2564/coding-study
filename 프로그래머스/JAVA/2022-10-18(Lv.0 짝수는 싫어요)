class Solution {
    public int[] solution(int n) {
        int a = 0;
        if (n % 2 == 0) {
            a = n / 2;
        }
        else if(n % 2 == 1) {
            a = n / 2 + 1;
        }
        
        int[] answer = new int[a];
        int j = 0;
        for (int i = 1; i < n+1; i++) {
            if (i % 2 == 1) {
                answer[j++] = i;
            }
            
            
        }
        
        
        
        
        
        return answer;
    }
}
